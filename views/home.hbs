<!doctype html>
<html lang="en">
    <head>
        <title>Student Grading System</title>
        <meta charset="utf-8"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link href="style.css" rel="stylesheet">
    </head>
    <body onload="fetchScores()">
        <section class="bg-dark text-light p-5 text-center">
            <h1 class="fw-bold">Student Scores Application</h1>
        </section>
        <section class="text-dark p-4 text-center">
            <h4 class="fw-bold pt-4">Enter Student scores below: </h4>
        </section>
        
        <div>
            <section id="form">
                <div class="container-lg">
                    <div class="row justify-content-center my-3">
                        <div class="col-lg-6">
                            <form>
                                <div class="mb-3">
                                    <label for="studentName" class="form-label">Student name</label>
                                    <input type="text" name="studentName" class="form-control" id="studentName">
                                </div>
                                <div class="mb-3">
                                    <label for="score1" class="form-lbel">Quiz 1 score </label>
                                    <input type="text" name="score1" class="form-control" step="any" id="score1">
                                </div>
                                <div class="mb-3">
                                    <label for="score2" class="form-label">Quiz 2 score </label>
                                    <input type="text" name="score2" class="form-control" step="any" id="score2">   
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-secondary">Clear</button>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
            
            <section id="table">
                <div class="p-5">
                    <table class="table table-success">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Student Name</th>
                                <th scope="col">Quiz 1</th>
                                <th scope="col">Quiz 2</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody id="content" class="table-group-divider"></tbody>
                    </table>
                </div>
            </section>
        </div>

    </body>
    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="js/app.js"></script>

</html>