<!doctype html>
<html lang="en">
    <head>
        <title>Student Grading System</title>
        <meta charset="utf-8"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <h1>Enter Student Scores</h1>
        <div>
            <form>
                <div class="mb-3">
                    <label for="studentName" class="form-label">Student name</label>
                    <input type="text" name="studentName" class="form-control" id="studentName">
                </div>
                <div class="mb-3">
                    <label for="score1" class="form-label">Quiz 1 score</label>
                    <input type="text" name="score1" class="form-control" step="any" id="score1">
                </div>
                <div class="mb-3">
                    <label for="score2" class="form-label">Quiz 1 score</label>
                    <input type="text" name="score2" class="form-control" step="any" id="score2">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            
            <table id="content">
            </table>
        </div>

    </body>
    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="js/app.js"></script>

</html>